            {name: "Sheriff, Hawa", visits: 5, hours: 40.5, regular: 40, overtime: 0.5},
            {name: "Williams, Sonia", visits: 8, hours: 40, regular: 40, overtime: 0},
            {name: "Williams-Stith, Maleah", visits: 5, hours: 71.25, regular: 47.5, overtime: 23.75}
        ];

        function populateTable(tableId, data) {
            const tbody = document.getElementById(tableId + 'Body');
            tbody.innerHTML = '';
            
            data.forEach(row => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td><strong>${row.name}</strong></td>
                    <td>${row.visits}</td>
                    <td><strong>${row.hours.toFixed(2)}</strong></td>
                    <td>${row.regular.toFixed(2)}</td>
                    <td>${row.overtime > 0 ? '<span class="overtime-badge">' + row.overtime.toFixed(2) + '</span>' : '0.00'}</td>
                `;
                tbody.appendChild(tr);
            });
        }

        function switchTab(tabName) {
            const tabs = document.querySelectorAll('.tab-content');
            const buttons = document.querySelectorAll('.tab-btn');
            
            tabs.forEach(tab => tab.classList.remove('active'));
            buttons.forEach(btn => btn.classList.remove('active'));
            
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
            
            if (tabName === 'analytics') {
                renderCharts();
            }
        }

        function filterTable(tableId, searchId) {
            const input = document.getElementById(searchId);
            const filter = input.value.toUpperCase();
            const table = document.getElementById(tableId);
            const tr = table.getElementsByTagName('tr');
            
            for (let i = 1; i < tr.length; i++) {
                const td = tr[i].getElementsByTagName('td')[0];
                if (td) {
                    const txtValue = td.textContent || td.innerText;
                    tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? '' : 'none';
                }
            }
        }

        function filterByOvertime(tableId, filterId) {
            const select = document.getElementById(filterId);
            const value = select.value;
            const table = document.getElementById(tableId);
            const tr = table.getElementsByTagName('tr');
            
            for (let i = 1; i < tr.length; i++) {
                const overtimeTd = tr[i].getElementsByTagName('td')[4];
                if (overtimeTd) {
                    const overtimeValue = parseFloat(overtimeTd.textContent);
                    if (value === 'all') {
                        tr[i].style.display = '';
                    } else if (value === 'overtime') {
                        tr[i].style.display = overtimeValue > 0 ? '' : 'none';
                    } else if (value === 'no-overtime') {
                        tr[i].style.display = overtimeValue === 0 ? '' : 'none';
                    }
                }
            }
        }

        function sortTable(tableId, column) {
            const table = document.getElementById(tableId);
            let switching = true;
            let shouldSwitch, i;
            let dir = 'asc';
            let switchcount = 0;
            
            while (switching) {
                switching = false;
                const rows = table.rows;
                
                for (i = 1; i < (rows.length - 1); i++) {
                    shouldSwitch = false;
                    const x = rows[i].getElementsByTagName('TD')[column];
                    const y = rows[i + 1].getElementsByTagName('TD')[column];
                    
                    let xContent = x.textContent.trim();
                    let yContent = y.textContent.trim();
                    
                    if (column > 0) {
                        xContent = parseFloat(xContent) || 0;
                        yContent = parseFloat(yContent) || 0;
                    }
                    
                    if (dir === 'asc') {
                        if (column === 0 ? xContent.toLowerCase() > yContent.toLowerCase() : xContent > yContent) {
                            shouldSwitch = true;
                            break;
                        }
                    } else {
                        if (column === 0 ? xContent.toLowerCase() < yContent.toLowerCase() : xContent < yContent) {
                            shouldSwitch = true;
                            break;
                        }
                    }
                }
                
                if (shouldSwitch) {
                    rows[i].parentNode.insertBefore(rows[i + 1], rows[i]);
                    switching = true;
                    switchcount++;
                } else {
                    if (switchcount === 0 && dir === 'asc') {
                        dir = 'desc';
                        switching = true;
                    }
                }
            }
        }

        function renderCharts() {
            // Top Clients
            const topClients = [...clientsData].sort((a, b) => b.hours - a.hours).slice(0, 10);
            const maxClientHours = Math.max(...topClients.map(c => c.hours));
            
            const topClientsHTML = topClients.map(client => `
                <div style="margin: 15px 0;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                        <span><strong>${client.name}</strong></span>
                        <span>${client.hours.toFixed(2)} hrs</span>
                    </div>
                    <div class="bar" style="width: ${(client.hours / maxClientHours) * 100}%">
                        ${client.visits} visits
                    </div>
                </div>
            `).join('');
            
            document.getElementById('topClientsChart').innerHTML = topClientsHTML;
            
            // Top Caregivers
            const topCaregivers = [...caregiversData].sort((a, b) => b.hours - a.hours).slice(0, 10);
            const maxCaregiverHours = Math.max(...topCaregivers.map(c => c.hours));
            
            const topCaregiversHTML = topCaregivers.map(caregiver => `
                <div style="margin: 15px 0;">
                    <div style="display: flex; justify-content: space-between; margin-bottom: 5px;">
                        <span><strong>${caregiver.name}</strong></span>
                        <span>${caregiver.hours.toFixed(2)} hrs</span>
                    </div>
                    <div class="bar" style="width: ${(caregiver.hours / maxCaregiverHours) * 100}%; background: #764ba2;">
                        ${caregiver.visits} visits
                    </div>
                </div>
            `).join('');
            
            document.getElementById('topCaregiversChart').innerHTML = topCaregiversHTML;
        }

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            populateTable('clientTable', clientsData);
            populateTable('caregiverTable', caregiversData);
        });
    </script>
